@{
    ViewBag.Title = "Lending - Sign In";
}

<div id="main-content">

    <h1>Welcome to Lending!</h1>
    <h3>Please select an authentication method below</h3>
    <form action="api/auth/twitter" method="POST">
        <input type="submit" value="Twitter" />
    </form>
    <form action="api/auth/facebook" method="POST">
        <input type="submit" value="Facebook" />
    </form>
    <form action="api/auth/GoogleOAuth" method="POST">
        <input type="submit" value="Google" />
    </form>
</div>
